//DOOR FUNCTIONALITY


function useItem(x,y,z,i,b){


//bookshelf
if(b==254){
Level.playSound(x,y,z,"random.door_open",50,50);
Level.setTile(x,y,z,255,0);
if(Level.getTile(x,y+1,z)==254){
Level.setTile(x,y+1,z,255,0);
}
if(Level.getTile(x,y-1,z)==254){
Level.setTile(x,y-1,z,255,0);
}
}
if(b==255){
Level.playSound(x,y,z,"random.door_open",50,50);
